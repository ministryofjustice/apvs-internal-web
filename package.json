{
  "name": "internal-web",
  "version": "0.1.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ministryofjustice/apvs-internal-web.git"
  },
  "engines": {
    "node": "12.x.x"
  },
  "scripts": {
    "start": "gulp",
    "generate-assets": "gulp generate-assets",
    "start-maintenance": "node app/bin/www-maintenance",
    "test": "standard && mocha --recursive test/unit/",
    "test-coverage": "istanbul cover -x 'app/services/data/**' _mocha -- --recursive test/unit/",
    "test-unit": "mocha --recursive test/unit/",
    "test-integration": "mocha --recursive test/integration/ --timeout 5000",
    "test-e2e": "gulp --gulpfile gulpfile-e2e.js",
    "test-e2e-smoke": "gulp --gulpfile gulpfile-e2e.js e2e-smoke",
    "test-e2e-ie8": "wdio test/wdio.conf.sauce.ie8.js",
    "test-e2e-firefox": "wdio test/wdio.conf.sauce.firefox.js",
    "test-e2e-ie8-jenkins": "wdio test/wdio.conf.sauce.ie8.jenkins.js",
    "test-e2e-firefox-jenkins": "wdio test/wdio.conf.sauce.firefox.jenkins.js",
    "test-e2e-chrome-jenkins": "wdio test/wdio.conf.sauce.chrome.jenkins.js",
    "test-e2e-chrome-jenkins-smoke": "wdio test/wdio.conf.sauce.chrome.jenkins.smoke.js",
    "migrations": "knex migrate:latest --env migrations && knex seed:run --env migrations",
    "rollback": "knex migrate:rollback --env migrations"
  },
  "standard": {
    "ignore": [
      "cache_node_modules/*",
      "jquery*.js",
      "ga.js"
    ],
    "globals": [
      "describe",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "it",
      "browser",
      "$"
    ]
  },
  "dependencies": {
    "bluebird": "^3.7.2",
    "body-parser": "~1.19.0",
    "bunyan": "^1.8.12",
    "bunyan-logstash-tcp": "^1.0.0",
    "bunyan-prettystream": "^0.1.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "csurf": "^1.11.0",
    "csv": "^5.3.2",
    "debug": ">=4.1.1",
    "express": "~4.17.1",
    "express-nunjucks": "^2.2.5",
    "express-sanitized": "^0.5.1",
    "express-session": "^1.17.1",
    "govuk-elements-sass": "^2.2.1",
    "govuk_frontend_toolkit": "^9.0.0",
    "govuk_template_jinja": "^0.26.0",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.1.0",
    "helmet": "^3.22.0",
    "knex": "^0.21.0",
    "mkdirp": "^1.0.4",
    "moment": "^2.24.0",
    "mssql": "^6.2.0",
    "multer": "^1.4.2",
    "node-gyp": "^6.1.0",
    "node-sass": "^4.14.0",
    "nunjucks": "^3.2.1",
    "on-finished": "^2.3.0",
    "passport": "^0.4.1",
    "passport-oauth2": "^1.5.0",
    "path": "^0.12.7",
    "serve-favicon": "~2.5.0",
    "underscore": "^1.10.2",
    "validator": "^13.0.0"
  },
  "devDependencies": {
    "@wdio/cli": "^6.1.2",
    "@wdio/local-runner": "^6.1.2",
    "@wdio/mocha-framework": "^6.1.0",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "debug": ">=4.1.1",
    "gulp-webdriver": "^4.0.0",
    "istanbul": "^0.4.5",
    "mocha": "^7.1.1",
    "nodemon": "^2.0.3",
    "proxyquire": "^2.1.3",
    "selenium-standalone": "^6.17.0",
    "sinon": "^9.0.2",
    "standard": "^14.3.3",
    "supertest": "^4.0.2",
    "wdio-sauce-service": "^0.4.14",
    "webdriverio": "^6.1.3"
  }
}
